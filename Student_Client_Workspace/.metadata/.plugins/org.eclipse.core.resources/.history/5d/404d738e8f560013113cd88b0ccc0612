package ScreenShot;

import java.awt.Graphics2D;
import java.awt.Rectangle;
import java.awt.RenderingHints;
import java.awt.Robot;
import java.awt.Toolkit;
import java.awt.Transparency;
import java.awt.geom.AffineTransform;
import java.awt.image.BufferedImage;
import java.awt.image.RenderedImage;
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectOutputStream;
import java.io.OutputStreamWriter;
import java.net.Socket;

import javax.imageio.ImageIO;


public class ImageClient extends Thread{
	BufferedImage bufImage = null;
	//스트림 변수
	BufferedWriter bufferedWriter = null;
	BufferedReader bufferedReader = null;
	ObjectOutputStream objectOutputStream = null;
	//소켓
	Socket socket = null;
	//생성자
	public ImageClient(){
		try {
			socket = new Socket("localhost", 20001);
			bufferedWriter = new BufferedWriter(new OutputStreamWriter(socket.getOutputStream()));
			bufferedReader = new BufferedReader(new InputStreamReader(socket.getInputStream()));
			objectOutputStream = new ObjectOutputStream(socket.getOutputStream());
			System.out.println("스트림 생성 성공");
			
			sendImage();
		}catch (IOException e) {
			System.out.println("서버 연결 실패");
		}
	} //생성자 끝
	//서버로 메시지를 전달하는 메서드
	public void sendMsg(String msg){
		try{
			System.out.println("이미지서버로 메시지 전달 : " + msg);
			bufferedWriter.write(msg + "\n");
			bufferedWriter.flush();
		}catch(IOException e){
			System.out.println("Guest To Client");
		}
	}
	//이미지 서버로부터 들어온 메시지 처리
	public void run(){
		try{
			String line = null;
			while((line = bufferedReader.readLine()) != null){
				System.out.println("이미지 클라이언트로부터 들어온 메시지 : " +line);
				if(line.equals("수락")){
					sendImage();
				}
			}
		}catch(Exception e){
			System.out.println("Guest Exception");
		}
	}
	//이미지 전송
	public void sendImage(){
		this.captureScreen();
		try {
			ImageIO.write(bufImage, "jpg", objectOutputStream);
			System.out.println("서버로 이미지 전송 완료");
		} catch (IOException e) {
			System.out.println("이미지 전송 실패");
		}
	}
	//스크린 캡쳐
	private void captureScreen(){
		Robot robot = null;
		try{
			robot = new Robot();
			Rectangle area = new Rectangle(Toolkit.getDefaultToolkit().getScreenSize());
			bufImage = createJustScaledImage(robot.createScreenCapture(area), 400);
		}catch(Exception e){
			e.printStackTrace();
		}
	}

//	public void run(){
